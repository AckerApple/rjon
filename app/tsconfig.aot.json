{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../aot",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "allowJs": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "node_modules",
    "../node_modules",
    "../node_modules/**"
  ],
  "include":[
    "../package.json"
  ],
  "files": [
    "typings.d.ts",
    "src/app.module.ts",
    "./index.prod.ts",
    "./index.ts"
  ],
  "angularCompilerOptions": {
    "skipMetadataEmit" : true,
    "skipTemplateCodegen" : true
  }
}