h3 Edit Host : {{ hostModel.hostname }}

form("(onFormChanged)"="onChange.emit(route)")
  .flex-wrap.child-margin-xxs.child-margin-bottom
    .flex-1
      label Host Name
      input.width-full("[(ngModel)]"="hostModel.hostname" name="hostModel.hostname")
    .flex-1
      label Protocol
      input.width-full("[(ngModel)]"="hostModel.protocol" name="hostModel.protocol")
    .flex-1
      label Port
      input.width-full("[(ngModel)]"="hostModel.port" name="hostModel.port")
    .flex-1
      label Description
      input.width-full("[(ngModel)]"="hostModel.description" name="hostModel.description")

  .margin-v
    label Notes
    rjon-notes-editor([data]="hostModel.notes")

  .margin-v
    label Headers
    rjon-header-editor([data]="hostModel.headers")

